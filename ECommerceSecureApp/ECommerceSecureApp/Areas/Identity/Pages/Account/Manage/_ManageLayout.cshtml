@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            @if (User.IsInRole("Admin"))
            {
                <div class="card mb-3" style="position: sticky; top: 20px;">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0 text-dark">Admin Panel</h5>
                        <small class="text-dark">Administrative functions</small>
                    </div>
                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt"></i> Admin Dashboard
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
            
            <div class="card" style="position: sticky; top: 20px;">
                <div class="card-header" style="background-color: #f8f9fa !important;">
                    <h5 class="mb-0" style="color: #000000 !important; font-weight: bold !important;">Manage your account</h5>
                    <small style="color: #6c757d !important;">Change your account settings</small>
                </div>
                <div class="card-body p-0">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body text-dark">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Override all hover effects for Identity pages */
    .card {
        transition: none !important;
        transform: none !important;
    }
    
    .card:hover {
        transform: none !important;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }
    
    .nav-link {
        transition: none !important;
    }
    
    .nav-link:hover {
        transform: none !important;
    }
    
    /* Override the product-card hover effect from site.css */
    .product-card {
        transition: none !important;
    }
    
    .product-card:hover {
        transform: none !important;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }
    
    /* Ensure all cards in this layout are static */
    .container .card {
        transition: none !important;
        transform: none !important;
    }
    
    .container .card:hover {
        transform: none !important;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }
    
    /* Ensure all text in manage pages is dark and visible */
    .card-body h1, .card-body h2, .card-body h3, .card-body h4, .card-body h5, .card-body h6 {
        color: #000000 !important;
    }
    
    .card-body p, .card-body li, .card-body span, .card-body div {
        color: #000000 !important;
    }
    
    .card-body .text-muted {
        color: #6c757d !important;
    }
    
    .card-body .text-dark {
        color: #000000 !important;
    }
    
    /* Ensure card header text is always dark and visible */
    .card-header h5, .card-header h6, .card-header small {
        color: #000000 !important;
    }
    
    .card-header .text-dark {
        color: #000000 !important;
    }
    
    .card-header .text-muted {
        color: #6c757d !important;
    }
    
    /* Force all text in card headers to be dark */
    .card-header * {
        color: #000000 !important;
    }
    
    .card-header small {
        color: #6c757d !important;
    }
    
    /* Specific targeting for the manage account header */
    .card-header h5.mb-0 {
        color: #000000 !important;
        font-weight: bold !important;
    }
    
    .card-header small {
        color: #6c757d !important;
        font-weight: normal !important;
    }
    
    /* Ensure navigation links are visible */
    .nav-link {
        color: #000000 !important;
    }
    
    .nav-link:hover {
        color: #000000 !important;
        background-color: #f8f9fa !important;
    }
    
    .nav-link.active {
        color: #000000 !important;
        background-color: #e9ecef !important;
    }
    
    /* Additional overrides to ensure text visibility */
    .container .card .card-header h5 {
        color: #000000 !important;
        font-weight: bold !important;
    }
    
    .container .card .card-header small {
        color: #6c757d !important;
    }
    
    /* Force override any inherited styles */
    .card-header h5.mb-0.text-dark {
        color: #000000 !important;
        font-weight: bold !important;
    }
    
    .card-header small.text-dark {
        color: #6c757d !important;
    }
</style>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}
