@model ECommerceSecureApp.Models.Utility.PagedResult<ECommerceSecureApp.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
    var dummy = new ECommerceSecureApp.Models.Product();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between text-black mb-3">
        <h2>Manage Products</h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-warning">+ Create New</a>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(m => dummy.Name)</th>
                        <th>@Html.DisplayNameFor(m => dummy.Category)</th>
                        <th>@Html.DisplayNameFor(m => dummy.Price)</th>
                        <th>@Html.DisplayNameFor(m => dummy.Description)</th>
                        <th>@Html.DisplayNameFor(m => dummy.CreatedDate)</th>
                        <th>@Html.DisplayNameFor(m => dummy.ModifiedDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td><span class="badge bg-warning">@item.Category</span></td>
                            <td class="text-success">$@item.Price.ToString("F2")</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.ModifiedDate</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-info">Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
