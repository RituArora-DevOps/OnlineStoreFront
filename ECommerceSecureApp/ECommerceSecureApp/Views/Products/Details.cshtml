@model ECommerceSecureApp.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4>Product Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9"><span class="badge bg-primary">@Model.Category</span></dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9 text-success">$@Model.Price.ToString("F2")</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate</dd>

                <dt class="col-sm-3">Modified Date</dt>
                <dd class="col-sm-9">@Model.ModifiedDate</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-outline-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
