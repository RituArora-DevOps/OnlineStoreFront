@{
    ViewData["Title"] = "My Account";
}

<div class="container mt-4 text-dark">
    <h2 class="mb-4">My Account</h2>

    <div class="row g-4">
        <!-- Profile Card -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Profile</h5>
                    <p><strong>Email:</strong> @User.Identity.Name</p>
                    @* <a href="@Url.Action("Profile", "Customer")" class="btn btn-primary btn-sm mt-2">Edit Profile</a> *@
                </div>
            </div>
        </div>

        <!-- Orders Card -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Recent Orders</h5>
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Total</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in ViewBag.RecentOrders)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.Total.ToString("C")</td>
                                    <td>@order.Date.ToShortDateString()</td>
                                    <td>@order.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>My Reviews</h4>
            <a asp-area="Identity" asp-page="/Account/Manage/Reviews" class="btn btn-outline-primary btn-sm">
                View All Reviews
            </a>
        </div>
        
        @if (ViewBag.MyReviews != null && ((IEnumerable<dynamic>)ViewBag.MyReviews).Any())
        {
            <div class="row">
                @foreach (var review in ViewBag.MyReviews.Take(3))
                {
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">@review.ProductName</h6>
                                <div class="mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                    }
                                </div>
                                <p class="card-text">@(review.Comment?.Length > 100 ? review.Comment.Substring(0, 100) + "..." : review.Comment)</p>
                                <small class="text-muted">@review.CreatedDate.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-3">
                <i class="fas fa-star fa-2x text-muted mb-2"></i>
                <p class="text-muted mb-0">No reviews yet. <a href="@Url.Action("Index", "Products")">Write your first review!</a></p>
            </div>
        }
    </div>

    <!-- Order History Section -->
    <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Order History</h4>
            <a asp-area="Identity" asp-page="/Account/Manage/OrderHistory" class="btn btn-outline-primary btn-sm">
                View All Orders
            </a>
        </div>
        
        @if (ViewBag.RecentOrders != null && ((IEnumerable<dynamic>)ViewBag.RecentOrders).Any())
        {
            <div class="row">
                @foreach (var order in ViewBag.RecentOrders)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header d-flex justify-content-between align-items-center py-2">
                                <h6 class="mb-0">Order #@order.OrderId</h6>
                                <span class="badge @(order.OrderStatus?.Status?.ToLower() switch {
                                    "pending" => "bg-warning",
                                    "processing" => "bg-info", 
                                    "shipped" => "bg-primary",
                                    "delivered" => "bg-success",
                                    "cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                })">@(order.OrderStatus?.Status ?? "Unknown")</span>
                            </div>
                            <div class="card-body py-2">
                                <div class="mb-2">
                                    <small class="text-muted">Date:</small>
                                    <div>@order.CreatedDate.ToString("MMM dd, yyyy")</div>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Items:</small>
                                    <div>@(order.OrderItems?.Count ?? 0) item(s)</div>
                                </div>
                                <div class="mb-2">
                                    <small class="text-muted">Total:</small>
                                    <div class="fw-medium">
                                        @{
                                            decimal total = 0;
                                            if (order.OrderItems != null)
                                            {
                                                foreach (var item in order.OrderItems)
                                                {
                                                    total += item.Quantity * item.PriceAtOrder;
                                                }
                                            }
                                        }
                                        @total.ToString("C")
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer py-2">
                                <a href="@Url.Action("OrderDetails", "Customer", new { id = order.OrderId })" 
                                   class="btn btn-outline-primary btn-sm w-100">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-3">
                <i class="fas fa-shopping-bag fa-2x text-muted mb-2"></i>
                <p class="text-muted mb-0">No orders found. <a href="@Url.Action("Index", "Products")">Start shopping!</a></p>
            </div>
        }
    </div>
</div>
