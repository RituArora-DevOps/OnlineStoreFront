<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceSecureApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceSecureApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag"></i> ECommerceSecureApp
                </a>

                <!-- Search bar -->
                <form class="d-flex" method="get" asp-controller="Products" asp-action="Index">
                    <input class="form-control me-2" type="search" name="name" placeholder="Search products" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>

                <!-- Right side links -->
                <div>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarCategoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarCategoryDropdown">
                                <li><a class="dropdown-item" asp-route-category="Electronics">Electronics</a></li>
                                <li><a class="dropdown-item" asp-route-category="Clothing">Clothing</a></li>
                                <li><a class="dropdown-item" asp-route-category="Grocery">Grocery</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> Cart
                            </a>
                        </li>
                    </ul>

                </div>

                <!-- Login/Logout -->
                <partial name="_LoginPartial" />


            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light mt-5 pt-4 pb-2">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6 class="text-warning">ECommerceSecureApp</h6>
                    <p class="small">Your one-stop shop for all products. Secure. Fast. Reliable.</p>
                </div>
                <div class="col-md-2">
                    <h6 class="text-warning">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Home" asp-action="Index" class="text-light">Home</a></li>
                        <li><a asp-controller="Review" asp-action="Index" class="text-light">Reviews</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6 class="text-warning">Account</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Customer" asp-action="Dashboard" class="text-light">My Account</a></li>
                        <li><a asp-controller="Cart" asp-action="Index" class="text-light">Cart</a></li>
                    </ul>
                </div>
                <div class="col-md-4 text-end">
                    <p class="small">&copy; @DateTime.Now.Year - ECommerceSecureApp</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_Toast")
    <script src="~/js/cart.js"></script>
</body>
</html>
