@model ECommerceSecureApp.Models.ViewModels.CheckoutVM
@{
    ViewData["Title"] = "Checkout";
}

<div class="checkout-surface">
    <h2 class="mb-3">Checkout</h2>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Product</th>
                <th class="text-end">Unit (Disc)</th>
                <th class="text-center">Qty</th>
                <th class="text-end">Line (Disc)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td class="text-end">@item.DiscountedUnitPrice.ToString("C")</td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-end">@item.DiscountedLineTotal.ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total</th>
                <th class="text-end">@Model.Total.ToString("C")</th>
            </tr>
        </tfoot>
    </table>

    <form asp-action="PlaceOrder" method="post" class="mt-3">
        <input type="hidden" name="CartId" value="@Model.CartId" />

        <div class="mb-3">
            <label class="form-label">Payment Method</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="PaymentMethod" value="Credit" checked />
                <label class="form-check-label">Credit Card</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="PaymentMethod" value="PayPal" />
                <label class="form-check-label">PayPal</label>
            </div>
        </div>

        <div id="creditFields" class="border rounded p-3 mb-3 bg-white">
            <div class="row g-2">
                <div class="col-md-4">
                    <label class="form-label">Card Brand</label>
                    <input class="form-control" name="CardBrand" placeholder="e.g., VISA" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Last 4</label>
                    <input class="form-control" name="CardLast4" maxlength="4" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Exp Month</label>
                    <input class="form-control" name="ExpMonth" type="number" min="1" max="12" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Exp Year</label>
                    <input class="form-control" name="ExpYear" type="number" min="2024" max="2100" />
                </div>
            </div>
            <small class="text-muted d-block mt-2">
                We only store brand/last4/expiry (no card number or CVV).
            </small>
        </div>

        <div id="paypalFields" class="border rounded p-3 mb-3 bg-white" style="display:none;">
            <label class="form-label">PayPal Email</label>
            <input class="form-control" name="PayPalEmail" type="email" placeholder="your@email.com" />
        </div>

        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">Back to Cart</a>
        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
</div>

@section Scripts {
    <script>
        const creditBox = document.getElementById('creditFields');
        const paypalBox = document.getElementById('paypalFields');
        document.querySelectorAll('input[name="PaymentMethod"]').forEach(r => {
            r.addEventListener('change', e => {
                const v = e.target.value;
                creditBox.style.display = (v === 'Credit') ? '' : 'none';
                paypalBox.style.display = (v === 'PayPal') ? '' : 'none';
            });
        });
    </script>
}
