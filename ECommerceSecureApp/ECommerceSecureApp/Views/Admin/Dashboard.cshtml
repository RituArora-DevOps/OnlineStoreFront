@{
    var recentActiveOrders = ViewBag.RecentActiveOrders as IEnumerable<dynamic>;
    var recentCancelledOrders = ViewBag.RecentCancelledOrders as IEnumerable<dynamic>;
    var totalProducts = ViewBag.TotalProducts;
    var totalOrders = ViewBag.TotalOrders;
    var totalReviews = ViewBag.TotalReviews;
}

@* Admin Dashboard *@
<div class="container mt-4">
    <h2 class="text-black mb-4">Admin Dashboard</h2>
    
    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>
                    <h2 class="card-text">@totalProducts</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <h2 class="card-text">@totalOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Reviews</h5>
                    <h2 class="card-text">@totalReviews</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Orders</h5>
                    <h2 class="card-text">@((recentActiveOrders?.Count() ?? 0) + (recentCancelledOrders?.Count() ?? 0))</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Actions -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Products</h5>
                    <p class="card-text flex-grow-1">Add, edit, or remove products from the catalog.</p>
                    <a class="btn btn-warning" asp-controller="Products" asp-action="Index">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Review Moderation</h5>
                    <p class="card-text flex-grow-1">View and manage customer reviews.</p>
                    <a class="btn btn-warning" asp-controller="Review" asp-action="Index">Go to Reviews</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">View Payments</h5>
                    <p class="card-text flex-grow-1">View and manage all customer payments and transactions.</p>
                    <a class="btn btn-warning" asp-controller="Admin" asp-action="Payments">Go to Payments</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Active Orders Table -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Recent Active Orders (Last 15)</h5>
        </div>
        <div class="card-body p-0">
            @if (recentActiveOrders != null && recentActiveOrders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer ID</th>
                                <th>Order Date</th>
                                <th>Status</th>
                                <th>Total Amount</th>
                                <th>Payment Method</th>
                                <th>Items</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in recentActiveOrders)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("OrderDetails", "Admin", new { id = order.OrderId })" 
                                           class="text-decoration-none">
                                            #@order.OrderId
                                        </a>
                                    </td>
                                    <td>@order.CustomerId</td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        @if (order.Status == "Delivered")
                                        {
                                            <span class="badge bg-success">@order.Status</span>
                                        }
                                        else if (order.Status == "Pending")
                                        {
                                            <span class="badge bg-warning">@order.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@order.Status</span>
                                        }
                                    </td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                    <td>@order.PaymentMethod</td>
                                    <td>@order.ItemCount item(s)</td>
                                    <td>
                                        <a href="@Url.Action("OrderDetails", "Admin", new { id = order.OrderId })" 
                                           class="btn btn-sm btn-outline-primary">View Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h4 class="text-muted">No Active Orders Found</h4>
                    <p class="text-muted">No active order records are available at this time.</p>
                </div>
            }
        </div>
    </div>

    <!-- Recent Cancelled Orders Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Recent Cancelled Orders (Last 15)</h5>
        </div>
        <div class="card-body p-0">
            @if (recentCancelledOrders != null && recentCancelledOrders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer ID</th>
                                <th>Order Date</th>
                                <th>Status</th>
                                <th>Total Amount</th>
                                <th>Payment Method</th>
                                <th>Items</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in recentCancelledOrders)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("OrderDetails", "Admin", new { id = order.OrderId })" 
                                           class="text-decoration-none">
                                            #@order.OrderId
                                        </a>
                                    </td>
                                    <td>@order.CustomerId</td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge bg-danger">@order.Status</span>
                                    </td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                    <td>@order.PaymentMethod</td>
                                    <td>@order.ItemCount item(s)</td>
                                    <td>
                                        <a href="@Url.Action("OrderDetails", "Admin", new { id = order.OrderId })" 
                                           class="btn btn-sm btn-outline-primary">View Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h4 class="text-muted">No Cancelled Orders Found</h4>
                    <p class="text-muted">No cancelled order records are available at this time.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    h2, h5 {
        color: #000000 !important;
    }
    
    .card-title {
        color: #000000 !important;
    }
    
    .table th {
        color: #000000 !important;
        font-weight: 600;
    }
</style>
