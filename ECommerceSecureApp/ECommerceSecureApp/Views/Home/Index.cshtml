@model ECommerceSecureApp.ViewModel.ProductCatalogViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h2>Product Catalog</h2>

<form asp-action="Index" method="get">
    <input asp-for="Name" placeholder="Search by name" />
    <select asp-for="Category">
        <option value="">All Categories</option>
        <option value="Electronics">Electronics</option>
        <option value="Clothing">Clothing</option>
        <option value="Grocery">Grocery</option>
    </select>
    <input asp-for="MinPrice" type="number" placeholder="Min Price" />
    <input asp-for="MaxPrice" type="number" placeholder="Max Price" />
    <button type="submit">Filter</button>
</form>

<div class="row">
    @foreach (var product in Model.PagedProducts.Items)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 product-card">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text">
                        <span class="badge bg-primary">@product.Category</span>
                    </p>
                    <h6 class="text-success">$@product.Price.ToString("F2")</h6>
                </div>
                <div class="card-footer">
                    <div class="d-grid gap-2">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-outline-primary btn-sm">View Details</a>
                        <a asp-controller="Review" asp-action="ProductReviews" asp-route-productId="@product.ProductId" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-star"></i> Reviews
                        </a>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                            </form>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary btn-sm">Login to Add to Cart</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.PagedProducts.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PagedProducts.PageNumber ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-name="@Model.Name"
                   asp-route-category="@Model.Category"
                   asp-route-minPrice="@Model.MinPrice"
                   asp-route-maxPrice="@Model.MaxPrice">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
