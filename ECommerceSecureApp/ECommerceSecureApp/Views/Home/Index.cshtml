@model ECommerceSecureApp.ViewModel.ProductCatalogViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-banner text-white p-5 mb-4 rounded" style="background: linear-gradient(to right, #232f3e, #37475a);">
    <h1>Welcome to ECommerceSecureApp</h1>
    <p class="lead">Shop electronics, clothing, and groceries — all in one place.</p>
    <a class="btn btn-warning btn-lg" asp-controller="Home" asp-action="Index">Start Shopping</a>
</div>

<div class="row">
    <!-- Sidebar: Filters & Categories -->
    <div class="col-md-3">
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">
                Filters
            </div>
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="mb-3">
                        <label class="form-label">Search</label>
                        <input asp-for="Name" class="form-control" placeholder="Product name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Min Price</label>
                        <input asp-for="MinPrice" type="number" class="form-control" placeholder="0" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Max Price</label>
                        <input asp-for="MaxPrice" type="number" class="form-control" placeholder="1000" />
                    </div>

                    <button type="submit" class="btn btn-warning w-100">Apply Filters</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Products: Right side -->
    <div class="col-md-9">
        <div class="row">
            @foreach (var product in Model.PagedProducts.Items)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Action("ProductImage", "Picture", new { productId = product.ProductId })"
                             class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 200px;" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            @* <span class="badge bg-warning text-dark">@product.Category</span> *@
                            <h6 class="text-success mt-2">$@product.Price.ToString("F2")</h6>
                        </div>
                        <div class="card-footer d-grid gap-2">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId"
                               class="btn btn-outline-warning btn-sm text-dark">View Details</a>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <!-- AJAX add-to-cart: stays on page, shows toast -->
                                <form asp-controller="Cart" asp-action="Add" method="post"
                                      class="d-inline js-add-to-cart"
                                      data-product-name="@product.Name">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                                </form>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary btn-sm">Login to Add</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PagedProducts.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link bg-dark text-warning" asp-action="Index" asp-route-page="@(Model.PagedProducts.PageNumber - 1)">Previous</a>
                </li>

                @for (int i = 1; i <= Model.PagedProducts.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PagedProducts.PageNumber ? "active" : "")">
                        <a class="page-link @(i == Model.PagedProducts.PageNumber ? "bg-warning text-dark" : "bg-dark text-warning")"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-name="@Model.Name"
                           asp-route-category="@Model.Category"
                           asp-route-minPrice="@Model.MinPrice"
                           asp-route-maxPrice="@Model.MaxPrice">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.PagedProducts.PageNumber == Model.PagedProducts.TotalPages ? "disabled" : "")">
                    <a class="page-link bg-dark text-warning" asp-action="Index" asp-route-page="@(Model.PagedProducts.PageNumber + 1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
