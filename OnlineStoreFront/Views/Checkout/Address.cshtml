@model OnlineStoreFront.Models.ViewModels.CheckoutAddressVM
@{
    ViewData["Title"] = "Shipping Address";
}

<h2>Shipping Address</h2>
<form asp-action="Address" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label class="form-label">Address 1</label>
        <input asp-for="Address1" class="form-control" />
        <span asp-validation-for="Address1" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label class="form-label">Address 2</label>
        <input asp-for="Address2" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">City</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Province</label>
        <input asp-for="Province" class="form-control" />
        <span asp-validation-for="Province" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" />
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Continue</button>
        <a class="btn btn-outline-secondary" href="/Cart">Back to Cart</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
