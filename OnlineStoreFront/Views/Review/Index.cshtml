@model IEnumerable<OnlineStoreFront.Models.Business.ProductReview>

@{
    ViewData["Title"] = "All Reviews";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>All Product Reviews</h2>
            <hr />

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Review ID</th>
                                <th>Product</th>
                                <th>User</th>
                                <th>Rating</th>
                                <th>Comment</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model)
                            {
                                <tr>
                                    <td>@review.ReviewId</td>
                                    <td>
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@review.ProductId">
                                            @review.Product?.Name
                                        </a>
                                    </td>
                                    <td>@review.ExternalUserId</td>
                                    <td>
                                        <div class="rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= review.Rating)
                                                {
                                                    <span class="text-warning">★</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">☆</span>
                                                }
                                            }
                                            <span class="ms-1">(@review.Rating)</span>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(review.Comment))
                                        {
                                            <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@review.Comment">
                                                @review.Comment
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No comment</span>
                                        }
                                    </td>
                                    <td>@review.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@review.ReviewId" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@review.ReviewId" class="btn btn-sm btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>No Reviews Found</h4>
                    <p>There are no product reviews in the system yet.</p>
                </div>
            }
        </div>
    </div>
</div>
