@model OnlineStoreFront.Models.Business.ProductReview

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Review</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this review?</h5>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="mb-4">
                        <h6>Review Details:</h6>
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <div class="rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Model.Rating)
                                                {
                                                    <span class="text-warning">★</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">☆</span>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <small class="text-muted">@Model.CreatedDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(Model.Comment))
                                {
                                    <p class="card-text">@Model.Comment</p>
                                }
                                else
                                {
                                    <p class="card-text text-muted">No comment provided</p>
                                }
                                
                                <small class="text-muted">By: @Model.ExternalUserId</small>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input asp-for="ReviewId" type="hidden" />
                        <input asp-for="ProductId" type="hidden" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="ProductReviews" asp-route-productId="@Model.ProductId" class="btn btn-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Review
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .rating {
        font-size: 1.2em;
    }
    
    .rating .text-warning {
        color: #ffc107 !important;
    }
    
    .rating .text-muted {
        color: #6c757d !important;
    }
</style>
