@model OnlineStoreFront.Models.ViewModels.CartVM
@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

@if (!Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr><th>Product</th><th>Price</th><th>Qty</th><th>Total</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Items)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.UnitPrice.ToString("C")</td>
                    <td>
                        <form action="/Cart/Update" method="post" class="d-flex gap-2">
                            <input type="hidden" name="cartItemId" value="@i.CartItemId" />
                            <input type="number" name="qty" value="@i.Quantity" min="1" max="99" class="form-control" style="width:100px" />
                            <button class="btn btn-sm btn-secondary">Update</button>
                        </form>
                    </td>
                    <td>@i.LineTotal.ToString("C")</td>
                    <td>
                        <form action="/Cart/Remove" method="post">
                            <input type="hidden" name="cartItemId" value="@i.CartItemId" />
                            <button class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <p>Subtotal: <strong>@Model.Subtotal.ToString("C")</strong></p>
        <p>Tax: <strong>@Model.Tax.ToString("C")</strong></p>
        <p>Shipping: <strong>@Model.Shipping.ToString("C")</strong></p>
        <p>Total: <strong>@Model.Total.ToString("C")</strong></p>
        <a class="btn btn-primary" href="/Checkout/Address">Proceed to Checkout</a>
        <form action="/Cart/Clear" method="post" class="d-inline">
            <button class="btn btn-outline-secondary">Clear Cart</button>
        </form>
    </div>
}
